<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#37384D"
    >
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/txtScore"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/score"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="start"
            android:gravity="start"
            />
        <TextView
            android:id="@+id/txtBest"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/best"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:gravity="end"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/txtTime"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Time"
        android:layout_marginTop="20dp"
        android:textSize="35sp"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/txtBieuThuc"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="X + X = ?"
        android:layout_marginTop="20dp"
        android:textSize="70sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFFFF"
        />
    <Button
        android:id="@+id/btnKQ1"
        android:layout_height="@dimen/btn_height"
        android:layout_width="@dimen/btn_width"
        android:text="X"
        android:layout_gravity="center"
        android:background="@drawable/btn_play"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/btnKQ2"
        android:layout_height="@dimen/btn_height"
        android:layout_width="@dimen/btn_width"
        android:text="X"
        android:layout_gravity="center"
        android:background="@drawable/btn_more"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/btnKQ3"
        android:layout_height="@dimen/btn_height"
        android:layout_width="@dimen/btn_width"
        android:text="X"
        android:layout_gravity="center"
        android:background="@drawable/btn_kq"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:layout_marginTop="10dp"
        />
</LinearLayout>